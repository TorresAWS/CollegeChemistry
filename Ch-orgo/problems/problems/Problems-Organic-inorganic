
%%%%%%%PROBLEM
\begin{question}[ID=\the\value{numA}]\SetQuestionProperties{section-title=\nameref{sec:units}}
Classify the following chemicals in organic and inorganic. Give a rationale for your classification
\begin{inparaenum}[(a)]
\item \ce{KCl} % (ionic, inorganic)
\item \ce{C2H2} %(covalent, organic)
\item \ce{C4H10} %(covalent, organic)
\item \ce{FeO_{(s)}} %(ionic, inorganic)
\end{inparaenum}
\end{question}
\begin{solution}
\begin{inparaenum}[(a)]
\item ionic, inorganic
\item covalent, organic
\item covalent, organic
\item ionic, inorganic
\end{inparaenum}
\hspace{0.1cm}\end{solution}\stepcounter{numA}
%%%%%%%%%%%%%%



%%%%%%%PROBLEM
\begin{question}[ID=\the\value{numA}]\SetQuestionProperties{section-title=\nameref{sec:units}}
Classify the following chemicals in organic and inorganic. Give a rationale for your classification
\begin{inparaenum}[(a)]
\item \ce{C6H12} %(covalent, organic)
\item \ce{PH3} %(covalent, inorganic)
\item \ce{H2O} %(covalent, inorganic)
\item \ce{nylon} %(covalent, organic)
\end{inparaenum}
\end{question}
\begin{solution}
\begin{inparaenum}[(a)]
\item covalent, organic
\item covalent, inorganic
\item covalent, inorganic
\item covalent, organic
\end{inparaenum}
\hspace{0.1cm}\end{solution}\stepcounter{numA}
%%%%%%%%%%%%%%
